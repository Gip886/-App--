/* pages/rankList/rankList.wxss */
.items {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.items .item {
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(189, 195, 199, 0.1);
}

.items .item .left {
  width: 25%;
  display: flex;
}

.items .item .left image {
  width: 80rpx;
  height: 80rpx;
  margin: auto;
}

.items .item .center {
  flex: 1;
  display: flex;
}

.items .item .center image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 10rpx #797676;
}

.items .item .center .userName {
  margin-left: 20rpx;
  text-align: center;
  font-size: 28rpx;
}

.items .item .right {
  width: 25%;
  text-align: center;
  color: rgb(255, 102, 0);
}