/* pages/orderDetail/orderDetail.wxss */
.orderDetail-wrapper {
  height: 100vh;
  width: 100%;
  background-color: #f3f3f3;
}

.map {
  width: 100%;
  height: 400rpx;
  /* padding-top: 20rpx; */
}

.header {
  background-color: #fff;
  padding: 30rpx 20rpx;
}

.header .title {
  color: #a2a2a2;
  margin-bottom: 15rpx;
}

.order-info {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 0 20rpx;
}

.order-info .item {
  height: 100rpx;
  line-height: 100rpx;
  color: #8799a3;
  border-bottom: 1rpx solid #eeeeee;
}

.order-info .item .right {
  float: right;
}

/* 操作区域 */
.controlContainer {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  display: flex;
  text-align: center;
  /* background-color: aqua; */
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 0 2rpx #717475a2;
}

.controlContainer .left {
  background-color: aquamarine;
  width: 50%;
}

.controlContainer .right {
  background-color: blanchedalmond;
  width: 50%;
}